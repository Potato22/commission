<style>
  .endOfPage {
    display: flex;
    justify-content: center;
  }

  .end {
    width: 90%;
    margin: 4em 0 2em 0;
  }
  .footer {
    display: flex;
    justify-content: center;
    padding-bottom: 1.5em;
  }

  .flexbox1 {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .socials {
    display: flex;
    justify-content: center;
  }

  .copyright {
    font-family: var(--display), sans-serif;
    font-size: 0.8rem;
    margin-bottom: 0.2em;
    color: var(--fore);
  }

  .messageend {
    font-family: var(--contentSecondary), sans-serif;
    font-style: italic;
    text-align: center;
    color: var(--foreSecondary);
    font-size: 0.8rem;
  }

  .socicon {
    margin: 0 0.2em;
    font-size: 32px;
    color: var(--fore);
  }

  .tosPageLink {
    font-family: var(--display), sans-serif;
    color: var(--prim) !important;

    &:hover {
      text-decoration: underline !important;
    }
  }
</style>
