---
import { ClientRouter } from "astro:transitions";


---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- OG -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://pottoart.uk/" />
    <meta property="og:title" content="Potto" />
    <meta property="og:description" content="As weird as a name can get." />
    <meta
      property="og:image"
      content="https://raw.githubusercontent.com/Potato22/pottolink/master/assets/img/content/trainstation.jpg"
    />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://pottoart.uk/" />
    <meta property="twitter:title" content="Potto" />
    <meta
      property="twitter:description"
      content="As weird as a name can get."
    />
    <meta
      property="twitter:image"
      content="https://raw.githubusercontent.com/Potato22/pottolink/master/assets/img/content/trainstation.jpg"
    />

    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_circle_right,arrow_downward"
    />

    <script
      src="https://kit.fontawesome.com/14f5f92fc3.js"
      crossorigin="anonymous"></script>

    <title>Potto Commissions</title>
    <ClientRouter />
  </head>
  <body>
    <div class="themetogglecont">
      <div class="togglecont" title="Change to Light Mode">
        <div class="splash"></div><label class="checkboxtrig"
          ><input type="checkbox" id="ttogle" />
          <div class="material-icons-outlined theme-icon">light_mode</div>
        </label>
      </div>
      <a href="tos.astro" class="floatwindows">
        <div>
          <div class="floatwindowsstring">Open TOS</div>
        </div>
      </a>
    </div>

    <div transition:animate="fade">
      <slot />
    </div>

    <div class="endOfPage">
      <hr class="end" />
    </div>
    <div class="footer">
      <div class="flexbox1">
        <div class="socials">
          <a href="https://twitter.com/Potto2292" target="_blank">
            <div class="socicon"><i class="fab fa-twitter"></i></div>
          </a>
        </div><span class="copyright">Â©Potto</span><a
          href="tos.html"
          class="tosPageLink"><span>Terms of Service</span></a
        ><span class="messageend"
          >if you have any further questions please contact me on twitter, thank
          you!</span
        ><br />
      </div>
    </div>
  </body>
</html>

<style>
  .endOfPage {
    display: flex;
    justify-content: center;
  }

  .end {
    width: 90%;
    margin: 4em 0 2em 0;
  }
  .footer {
    display: flex;
    justify-content: center;
    padding-bottom: 1.5em;
  }

  .flexbox1 {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .socials {
    display: flex;
    justify-content: center;
  }

  .copyright {
    font-family: var(--display), sans-serif;
    font-size: 0.8em;
    margin-bottom: 0.2em;
    color: var(--fore);
  }

  .messageend {
    font-family: var(--contentSecondary), sans-serif;
    font-style: italic;
    text-align: center;
    color: var(--foreSecondary);
    font-size: 0.8em;
  }

  .socicon {
    margin: 0 0.2em;
    font-size: 32px;
    color: var(--fore);
  }

  .tosPageLink {
    font-family: var(--display), sans-serif;
    color: var(--accent) !important;

    &:hover {
      text-decoration: underline !important;
    }
  }
</style>
