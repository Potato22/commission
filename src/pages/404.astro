---
import PersistentWindow from "../components/persistentWindow.astro";
import pottoCeramic from "../assets/Pottoceramic.png";
import "../styles/root.scss";
---
<!doctype html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/x-icon" href={pottoCeramic.src} />

  <!-- OG -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://commission.pottoart.uk/" />
  <meta property="og:title" content="Huh?" />
  <meta property="og:description" content="Check your url, you are pointing at nothing." />
  <meta
    property="og:image"
    content={`${import.meta.env.SITE}/content/thumb/thumb_404.jpg`}
  />

  <!-- Twitter -->
  <meta property="twitter:card" content="summary_large_image" />
  <meta property="twitter:url" content="https://commission.pottoart.uk/" />
  <meta property="twitter:title" content="Huh?" />
  <meta property="twitter:description" content="Check your url, you are pointing at nothing." />
  <meta
    property="twitter:image"
    content={`${import.meta.env.SITE}/content/thumb/thumb_404.jpg`}
  />

  <link
    rel="stylesheet"
    href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200&icon_names=arrow_back_ios_new,arrow_downward,close,dark_mode,difference,download,draw_abstract,explicit,home,light_mode,link"
  />
  <title>Huh?</title>
  <meta name="theme-color" content="rgb(125, 201, 252)" />
</head>

<body>
  <PersistentWindow ignoreScrollCheck />
  <div class="bgfancy">
    <div class="fourofour">404</div>
    <div class="bigPotto"></div>
  </div>
  <div class="dialogs">
    <div class="dialog1">What, where?</div>
    <p id="dialog2"></p>
    <p class="dialog3">
      Re-check what you typed in the address bar. That or it simply does not exist.<br /><br />Can't go back? Try clicking on this <a
        href="./"
        style="color: var(--accent); font-weight: 800;"
        >particular batch of text that should take you back to the home page.</a
      >
    </p>
    <p class="dialog4">404</p>
  </div>
</body>

<script>
  const getUrl = window.location.pathname;
  const dialog2 = document.getElementById("dialog2") as HTMLElement;

  dialog2.innerHTML = `There is no <span id="wrongUrlDisplay">${getUrl}</span> here.`;

  const wrongUrlDisplay = document.getElementById(
    "wrongUrlDisplay"
  ) as HTMLElement;

  // const aF_ms = 60;
  // const aF_max = 1;
  // const aF_min = 0.651;
  // setInterval(() => {
  //   const alphaFlicker = (Math.random() * (aF_max - aF_min) + aF_min).toFixed(2);
  //   wrongUrlDisplay.style.background = `rgba(var(--primSecondaryRGB), ${alphaFlicker})`;
  // }, aF_ms);
</script>

<style lang="scss">
  body {
    width: 100%;
    height: 100vh;
  }

  .bgfancy {
    position: fixed;
    opacity: 0.2;
    pointer-events: none;
  }

  .bigPotto {
    position: absolute;
    background: url(../assets/ceramicwebNoText.svg);
    background-repeat: no-repeat;
    background-size: contain;
    background-position: -10vw;
    --bigPottoSize: 60vw;
    width: var(--bigPottoSize);
    height: var(--bigPottoSize);
    opacity: 1;
  }
  .fourofour {
    height: 100vh;
    width: 100vw;
    padding-top: 10rem;
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
    position: absolute;
    font-family: var(--doto);
    font-size: 30rem;
    font-weight: 900;
    color: var(--primSecondary);
    transition: all 0.2s var(--sleek);
  }

  .dialogs {
    position: relative;
    padding-top: 5em;
    padding-left: 5em;
    padding-right: 5em;
    color: var(--fore);
    transition: all .2s var(--sleek);
  }

  .dialog1 {
    font-family: var(--display);
    font-size: 8rem;
    font-weight: 800;
    width: 50%;
  }

  #dialog2 {
    font-family: var(--display);
    font-size: 1.8rem;
    font-weight: 500;
    margin-bottom: 5rem;
  }

  .dialog3 {
    font-family: var(--content);
    font-size: 1rem;
    font-weight: 300;
    margin-bottom: 5rem;
  }
  .dialog4 {
    font-family: var(--doto);
    font-size: 1rem;
    font-weight: 300;
  }

  @media screen and (max-width: 732px) {
    .dialogs {
      padding-top: 1em;
      padding-left: 1em;
      max-width: 400px;
    }

    .dialog1 {
      font-size: 3rem;
    }
  }
</style>
